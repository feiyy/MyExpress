      <table class="table table-hover" id="tab1">
			<tr>
				<th>ID</th>
				<th>用户名</th>
				<th>密码</th>
				<th>生日</th>
				<th>头像</th>	
				<th></th>	
			</tr>
	  </table>

		<script type="text/javascript" src="/jquery/dist/jquery.js" ></script>
		<script type="text/javascript" src="/bootstrap/dist/js/bootstrap.js" ></script>
		
		<script>
		    
		
		    function deleteuser(id)
			{
				$.ajax({
					type:"delete",
					url:"/users/delete/"+id,
					async:true,
					dataType:"json",
					success:function(data)
					{
						if(data.result == "删除成功")
						{
							//删除行
							$("[data-id="+id+"]").remove();
							alert("删除成功");
						}
						else
						{
							alert("删除失败");
						}
					}
				});
			}
			$.ajax({
				type:"get",
				url:"/users/listusers",
				async:true,
				dataType:"json",
				success:function(data)
				{
					for(var i=0; i<data.length;i++)
					{
						$("#tab1").append("<tr data-id='"+data[i]._id+"'><td>"+data[i]._id+"</td><td>"+data[i].uname+"</td><td>"+data[i].pwd+"</td><td>"+data[i].birthday+"</td><td><a href='/users/download/" + data[i].photo + "' download target='_blank'><img width='50px' height='50px' src='/files/" + data[i].photo + "'/></a></td><td><a href='javascript:deleteuser(" + data[i]._id + ")'>删除</a></td></tr>")
				   }

				  
				}
				});
				
				
			$(function(){

				$(document).on("click", "#tab1 tr",function(){
					
					$("#myModal3 [name=id]").val($(this).children("td:first").html());
					$("#myModal3 [name=username]").val($(this).children("td:eq(1)").html());
					$("#myModal3 [name=pwd]").val($(this).children("td:eq(2)").html());
					$("#myModal3 [name=birthday]").val($(this).children("td:eq(3)").html());
					
					$("#myModal3").modal('show');
					
				});
				
			})
			
			</script>
		
		
		
